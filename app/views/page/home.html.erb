<div class="home-page">
  <h1 class="page-title">Page#home</h1>
  <p class="page-info">Find me in app/views/page/home.html.erb</p>

  <% if current_user %>
    <div class="current-user-info">
      <p class="user-greeting">Hello, <%= current_user.email %></p>
      <p class="user-role">You are a <%= current_user.role %></p>
      <% if current_user.user? %>
        <!-- user Count here -->
        <!-- <p>There are <%= User.count %> users in the system.</p> -->
        <p><%= link_to "Go to Arts Page", arts_path, class: 'btn go-arts-btn' %></p>
      <% end %>
      <p><%= link_to "Sign out", destroy_user_session_path, 'data-turbo-method': :delete, class: 'btn sign-out-btn' %></p>
    </div>
  <% else %>
    <p class="login-prompt">You have not logged in yet.</p>
    <div class="auth-links">
      <%= link_to "Sign Up! ", new_user_registration_path, class: 'btn sign-up-btn' %>
      <%= link_to "Login", new_user_session_path, class: 'btn login-btn' %>
    </div>
  <% end %>
</div>
