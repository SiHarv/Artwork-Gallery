<%= form_with(model: location, local: true) do |form| %>

  <% if location.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>
      <ul>
        <% location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="locations-form-container">
    <div class="location-child-containers">
      <div class="  mb-3">
        <%= form.label :name_of_place, class: "form-label" %>
        <%= form.text_field :name_of_place, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :address, class: "form-label" %>
        <%= form.text_field :address, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :phone_number, class: "form-label" %>
        <%= form.telephone_field :phone_number, class: "form-control" %>
      </div>

      <div class="mb-3 full-width location-btn-save">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>

    <!-- Notes field -->
    <div class="location-child-container-notes">
      <div class="mb-3">
        <%= form.label :notes, class: "form-label" %>
        <%= form.text_area :notes, class: "form-control" %>
      </div>
    </div>
  </div>
<% end %>


<style>
  .locations-form-container {
    display: flex;
    flex-direction: row;
    gap: 3rem;
  }

  .location-child-containers {
    display: flex;
    flex-direction: column;
    gap: .5rem;
  }

  .location-child-container-notes {
    display: flex;
    gap: 1.5rem;
  }


  /* Notes field specific styling */
  .location-child-container-notes .form-control {
    width: 740px; /* Fixed width for textarea */
    height: 300px; /* Fixed height for textarea */
    resize: none; /* Disable resizing */
  }




</style>
